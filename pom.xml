<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>ken.herring.pug.challenge</groupId>
  <artifactId>pug-challenge</artifactId>
  <version>2023.09.21</version>

  <name>PUG Challenge VSCode</name>
  <description>PUG Challenge VSCode</description>
  <url>https://github.com/kenherring/pug-challenge</url>
  <inceptionYear>2023</inceptionYear>
  <organization>
    <name>PUG</name>
    <url>https://github.com/kenherring/pug-challenge</url>
  </organization>
  <licenses>
    <license>
      <name>LGPL 3.0</name>
    </license>
  </licenses>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/kenherring/pug-challenge/issues</url>
  </issueManagement>

  <developers>
    <developer>
      <id>kherring</id>
      <name>Ken Herring</name>
    </developer>
  </developers>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>19</maven.compiler.source>
    <maven.compiler.target>19</maven.compiler.target>

    <!-- This is the name and version displayed in the SonarCloud UI. -->
    <sonar.projectKey>ken.herring.pug.challenge:pug-challenge</sonar.projectKey>
    <!-- <sonar.projectName>pug-challenge</sonar.projectName> -->
    <!-- <sonar.organization>kenherring</sonar.organization> -->
    <sonar.projectVersion>2023.09.21</sonar.projectVersion>

    <!-- sonar.host.url=http://localhost:9000 -->
    <sonar.login>admin</sonar.login>
    <sonar.password>admin2</sonar.password>

    <sonar.sources>.</sonar.sources>
    <sonar.exclusions>.DataDigger/**,src/test/**</sonar.exclusions>
    <sonar.tests>src/test</sonar.tests>

    <!--  https://github.com/Riverside-Software/sonar-openedge/wiki/Property-list -->
    <sonar.oe.databases>schema/sp2k.df</sonar.oe.databases>
    <sonar.oe.binaries>target/rcode</sonar.oe.binaries>
    <sonar.oe.propath>src/main,src/test</sonar.oe.propath>
    <sonar.oe.dlc>/c/Progress/OpenEdge</sonar.oe.dlc>
    <sonar.oe.propath.dlc>true</sonar.oe.propath.dlc>
    <sonar.oe.coverage.profiler.dirs>target/profiler</sonar.oe.coverage.profiler.dirs>
    <sonar.oe.analytics>false</sonar.oe.analytics>
  </properties>

</project>
