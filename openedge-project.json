{
    "name": "pug-challenge",
    "charset": "iso8859-1",
    "oeversion": "12.2",
    "version": "12.2",
    "buildDirectory": "target/rcode",
    "graphicalMode": false,
    // "extraParameters": "-T target/temp -undothrow 2",
    "extraParameters": "-T target/temp",
    "numThreads": 1,
    "dbConnections": [],
    "buildPath": [
        { "type": "source", "path": "src/main", "includes": "**/*.cls,**/*.p" },
        { "type": "source", "path": "src/test", "includes": "**/*.cls,**/*.p" },
        { "type": "propath", "path": "${DLC}/tty/OpenEdge.Core.pl" }
        // { "type": "source", "path": "src/main", "includes": "**/*.cls,**/*.p", "documentation": ".builder/main.json" },
        // { "type": "source", "path": "src/test", "includes": "**/*.cls,**/*.p", "documentation": ".builder/test.json" },
        // { "type": "propath", "path": "${DLC}/tty/OpenEdge.Core.pl", "documentation": "target/docs/corelib.json" }
    ],
    "procedures": [],
    "profiles": [
      {
        "name": "schema dbs (./target/db/)",
        "inherits": "default",
        "value": {
          "dbConnections": [
            {
              "name": "sp2k",
              "connect": "-db target/db/sp2k/sp2k.db -1",
              "aliases": [ "sports2000" ],
              "dumpFile": "schema/sp2k.df"
            }
          ]
        }
      },
      {
        "name": "docker",
        "inherits": "default",
        "value": {
          "dbConnections": [
            {
              "name": "sp2k",
              "connect": "-db target/db/sp2k/sp2k.db -H localhost -P 2500",
              "aliases": [ "sports2000" ],
              "dumpFile": "schema/sp2k.df" }
          ]
        }
      },
      {
        "name": "no database",
        "inherits": "default",
        "value": {
          "dbConnections": []
        }
      }
    ]
}
