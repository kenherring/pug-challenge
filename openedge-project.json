{
    "name": "pug-challenge",
    "charset": "iso8859-1",
    "oeversion": "12.2",
    "version": "12.2",
    "buildDirectory": "build",
    "graphicalMode": false,
    "extraParameters": "-T target/temp",
    "numThreads": 1,
    "dbConnections": [],
    "buildPath": [
        { "type": "source", "path": "src", "includes": "**/*.cls,**/*.p" },
        { "type": "source", "path": "test", "includes": "**/*.cls,**/*.p" },
        { "type": "propath", "path": "build" },
        { "type": "propath", "path": "${DLC}/tty/OpenEdge.Core.pl", "documentation": "gendocs/corelib.json" }
    ],
    "procedures": [
      { "name": "dev/update_schema.sh", "mode": "once" }
    ],
    "profiles": [
      {
        "name": "schema dbs (./target/db/)", 
        "inherits": "default",
        "value": {
          "connect": "-db target/db/sp2k/sp2k.db -RO", 
          "aliases": [ "sports2000" ], 
          "dumpFile": "schema/schema.df" 
        }
      },
      {
        "name": "docker",
        "inherits": "default",
        "value": {
          "dbConnections": [
            { "name": "sp2k", "connect": "-db target/db/sp2k/sp2k.db -S localhost -P 8510", "aliases": [ "sports2000" ], "dumpFile": "schema/schema.df" }
          ]
        }
      },
      {
        "name": "no database",
        "inherits": "default",
        "value": {
          "dbConnections": [] 
        }
      }
    ]
}
