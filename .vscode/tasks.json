{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    { "label": "Welcome/Startup",
      "hide": true,
      "type": "shell",
      "command": ".vscode/scripts/startup.sh",
      "args": [],
      "presentation": {
        "clear": true,
        "echo": false,
        "reveal": "always",
        "showReuseMessage": false
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    { "label": "Run ABLUnit for active file",
      "type": "shell",
      "command": "ant",
      "icon": {
        "id": "beaker",
        "color": "terminal.ansiCyan"
      },
      "args": [
        "test",
        "-Dfile='${fileBasename}'"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    { "label": "Run ABLUnit for all files",
      "type": "shell",
      "icon": {
        "id": "beaker",
        "color": "terminal.ansiCyan"
      },
      "command": "ant",
      "args": [
        "test"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    { "label": "Launch DataDigger (read only schema)",
      "type": "shell",
      "icon": {
        "id": "database",
        "color": "terminal.ansiGreen"
      },
      "command": "prowin",
      "args": [
        "-basekey",
        "INI",
        "-s",
        "512",
        "-rereadnolock",
        "-p",
        ".DataDigger/DataDigger.p",
        "-pf",
        "schema/sp2k.pf",
        "-param",
        "'sports2000 (schema db)'"
      ],
      "presentation": {
        "reveal": "never",
        "focus": false,
        "showReuseMessage": false,
        "clear": true,
        "close": true,
      },
      "problemMatcher": []
    },
    { "label": "Launch DataDigger (docker)",
      "type": "process",
      "icon": {
        "id": "database",
        "color": "terminal.ansiGreen"
      },
      "command": "prowin",
      "args": [
        "-basekey",
        "INI",
        "-s",
        "512",
        "-rereadnolock",
        "-p",
        ".DataDigger/DataDigger.p",
        "-pf",
        "schema/schema-docker.pf",
        "-param",
        "'sp2k (schema db)'"
      ],
      // "presentation": {
      //   "echo": true,
      //   "reveal": "always",
      //   "focus": false,
      //   "panel": "shared",
      //   "showReuseMessage": true,
      //   "clear": false
      // },
      "problemMatcher": []
    }
  ]
}